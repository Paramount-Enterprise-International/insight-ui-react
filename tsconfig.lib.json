{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,

    "jsx": "react-jsx",
    "skipLibCheck": true,
    "baseUrl": "."
  },
  "include": ["src/components/**/*", "src/jsx.d.ts"],
  "exclude": ["src/demos/**/*", "src/docs/**/*", "src/main.tsx", "src/App.tsx"]
}
